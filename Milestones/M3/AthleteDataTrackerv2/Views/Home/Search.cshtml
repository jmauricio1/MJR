@model IEnumerable<AthleteDataTrackerv2.Models.Athlete>

@{
    ViewBag.Title = "Search";
}


<div>
    <div class="col-sm-5">

    </div>
    <h2>Athlete Search</h2>
</div>

<div class="row">

    <div class="col-sm-5">

    </div>


    <form method="post">
        <!--https://stackoverflow.com/questions/596444/html-actionlink-as-a-button-or-an-image-not-a-link-->
        <input type="search" placeholder="search" name="searchInput" class="searchBar">
        <button type="submit" class="btn btn-primary">Search</button>
    </form>


</div>
<table class="table">
    <tr>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var athlete in Model)
    {
        <tr onclick='location.href = "AthleteDetails/@athlete.ID";'>

            <td>
                @Html.DisplayFor(modelItem => athlete.FName)

                @Html.DisplayFor(modelItem => athlete.LName)
            </td>

        </tr>
    }

</table>
