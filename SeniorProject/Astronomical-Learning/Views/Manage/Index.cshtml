@model Astronomical_Learning.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<head>
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>


<div class="container information-paragraphs white-txt">
    <p class="text-success">@ViewBag.StatusMessage</p>
    <div class="container dark-bk ">
        <h1 class="white-txt text-center info-page-title">Manage Account</h1>
        <div style="height:50px"></div>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <a href="~/Manage/ChangeProfileAvatar">
                    <div class="account-settings-modal text-center">
                        <h3>Profile Avatar</h3>
                        <br />
                        <p>
                            Change your profile avatar.
                        </p>
                        <br />
                    </div>
                </a>
            </div>

            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <a href="~/Manage/ChangeProfileDetails">
                    <div class="account-settings-modal text-center">
                        <h3>Change Profile Details</h3>
                        <br />
                        <p>
                            Change your username, first name, last name, or biography.
                        </p>
                        <br />
                    </div>
                </a>
            </div>

            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                <a href="~/Manage/ChangePassword">
                    <div class="account-settings-modal text-center">
                        <h3>Password</h3>
                        <br />
                        <p>
                            Change your account password.
                        </p>
                        <br />
                    </div>
                </a>
            </div>
        </div>
        <div style="height:30px"></div>
    </div>
