@model Astronomical_Learning.Models.ChangeProfileAvt

@{
    ViewBag.Title = "ChangeProfileAvatar";
}

<div class="container-fluid">
    @using (Html.BeginForm("ChangeProfileAvatar", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="row dark-bkr">
            <div class="col-lg-1">

            </div>
            <div class="col-lg-2 text-center">
                <h3 class="white-txt">Choose a profile avatar</h3>
                <div class="form-group">
                    @Html.DropDownListFor(m => m.value, (SelectList)ViewBag.AID, htmlAttributes: new { @class = "form-control avatar-list" })
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="row white-txt planet-sub">
                    <div class="col-lg-3 text-center">
                        <h3>Rocket</h3>
                        <img class="choose-avatar" src="~/Images/Profile/avatars/rocket-a.png" />
                    </div>
                    <div class="col-lg-3 text-center">
                        <h3>Astronaut</h3>
                        <img class="choose-avatar" src="~/Images/Profile/avatars/astronaut-a.png" />
                    </div>
                    <div class="col-lg-3 text-center ">
                        <h3>Comet</h3>
                        <img class="choose-avatar" src="~/Images/Profile/avatars/comet-a.png" />
                    </div>
                    <div class="col-lg-3 text-center ">
                        <h3>Constellations</h3>
                        <img class="choose-avatar" src="~/Images/Profile/avatars/const-a.png" />
                    </div>
                    <div class="col-lg-3 text-center ">
                        <h3>Moon</h3>
                        <img class="choose-avatar" src="~/Images/Profile/avatars/moon-a.png" />
                    </div>
                    <div class="col-lg-3 text-center">
                        <h3>Saturn</h3>
                        <img class="choose-avatar" src="~/Images/Profile/avatars/saturn-a.png" />
                    </div>
                    <div class="col-lg-3 text-center">
                        <h3>Star</h3>
                        <img class="choose-avatar" src="~/Images/Profile/avatars/star-a.png" />
                    </div>
                    <div class="col-lg-3 text-center">
                        <h3>None</h3>
                        <img class="choose-avatar" src="~/Images/Profile/avatars/default-profile.png" />
                    </div>
                </div>
            </div>
            <div class="col-lg-1">

            </div>
            <div class="clearfix"></div>
        </div>
    }

</div>

