@model IEnumerable<Astronomical_Learning.DAL.AspNetUser>

@{
    ViewBag.Title = "AllAdmins";
}

    <div class="information-paragraphs dark-bkr">
        <div style="text-align:center">
            <h2>All Users</h2>
            @Html.ActionLink("See the list of all banned users.", "BannedUsers", "AdminAbilities")
        </div>


        <div style="text-align:center; justify-content:center">
            <br />
            <h4>Search for a user.</h4>
            <form method="post">
                <!--https://stackoverflow.com/questions/596444/html-actionlink-as-a-button-or-an-image-not-a-link-->
                <input type="search" placeholder="search for a user" name="searchInput" style="color:black">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
            <br />
        </div>
       


        <table class="table">
            <tr>
                <th>
                    Username
                </th>
                <th>
                    Banned Until
                </th>



                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
                    </td>


                    <td>
                        @Html.ActionLink("Edit Ban", "EditUserBan", new { id = item.Id }, new { @class = "btn btn-primary" }) 
                    </td>
                </tr>
            }

        </table>
    </div>
